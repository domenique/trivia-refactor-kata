{
  "name": "trivia",
  "version": "1.0.0",
  "description": "Trivia kata in typescript",
  "main": "src/game-runner.ts",
  "scripts": {
    "start": "ts-node src/game-runner.ts",
    "test": "TS_NODE_FILES=true nyc mocha --recursive --require ts-node/register \"tests/**/*.test.ts\""
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "typings"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "text",
      "html"
    ]
  },
  "author": "Felix Blechschmitt",
  "license": "GPL-3.0",
  "dependencies": {
    "typescript": "^2.9.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "approvals": "^4.0.0-beta.1",
    "chai": "^4.3.4",
    "mocha": "^9.1.4",
    "nyc": "^15.1.0",
    "seedrandom": "^3.0.5",
    "sinon": "^12.0.1",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.4.0"
  }
}
